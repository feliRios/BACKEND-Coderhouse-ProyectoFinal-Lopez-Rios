<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v6.0.0-beta1/css/all.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment.min.js"></script>

<div class="relative min-h-screen bg-gray-50">
    <div class="absolute inset-x-0 top-1/3 h-48 bg-gradient-to-r from-purple-300 to-purple-500 rounded-full blur-3xl opacity-30"></div>
    <div class="absolute inset-x-0 bottom-1/4 h-48 bg-gradient-to-r from-green-300 to-green-500 rounded-full blur-3xl opacity-30"></div>
    <div class="absolute inset-x-0 bottom-0 h-48 bg-gradient-to-r from-green-300 to-green-500 rounded-full blur-3xl opacity-30"></div>
    
    <div class="flex items-center justify-center h-screen">
        <div class="bg-white rounded-2xl shadow-lg p-6">
            <div class="flex flex-col items-center">
                <div class="flex items-center justify-center w-full bg-purple-700 rounded-t-2xl py-2">
                    <h1 class="text-white font-medium text-2xl">Chat</h1>
                </div>
                <div class="h-96 max-w-lg overflow-y-auto bg-gray-100 rounded-b-2xl py-4 px-4" id="messagesContainer">
                    <!-- Messages will be displayed here -->
                </div>
                <div class="w-full flex items-center justify-center rounded-b-2xl bg-gray-100 py-4 px-4 mt-4">
                    <div class="relative w-full">
                        <input type="text" class="pl-3 text-gray-700 w-full font-medium text-sm rounded-l-lg h-10 pr-16 outline-none ring-purple-500 border-none bg-white shadow-sm mb-2" id="name" placeholder="Name here" required>
                        <input type="text" class="pl-3 text-gray-700 w-full font-medium text-sm rounded-l-lg h-10 pr-16 outline-none ring-purple-500 border-none bg-white shadow-sm" id="message" placeholder="Message here" required>
                        <button class="absolute right-0 top-0 bottom-0 px-4 rounded-r-lg bg-purple-700 text-white hover:bg-purple-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500" onclick="addMensajes()">
                            <span class="bg-white rounded-md p-1">
                                <i class="text-purple-700 fa-solid fa-paper-plane"></i>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
